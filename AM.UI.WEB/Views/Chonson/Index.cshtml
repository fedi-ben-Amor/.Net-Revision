@model IEnumerable<AM.ApplicationCore.Domain.Chanson>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<form asp-action="index">
    <fieldset>
        <legend>Recherche</legend>
        Search by Titre :
        <input type="text" name="Titre" />
        <input type="submit" value="Recherche" />
    </fieldset>
</form>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateSortie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StyleMusical)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VuesYoutube)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artiste)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateSortie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StyleMusical)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VuesYoutube)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artiste.Contact)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ChansonId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ChansonId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ChansonId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
